<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.function.template.mapper.BoardMapper">
    <select id="selectBoardList" resultType="com.function.template.dto.BoardDto">
            SELECT
                board_idx,
                title,
                hit_cnt,
                created_datetime
            FROM
                t_board
            WHERE
                deleted_yn = 'N'
            ORDER BY board_idx DESC
    </select>
</mapper>